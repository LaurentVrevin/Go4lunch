<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Go4LunchLogin" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/drawer_header_bg</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <!-- DRAWER -->
    <style name="NavigationViewStyle">
        <!-- Fond du NavigationView -->
        <item name="android:background">@color/white</item>

        <!-- Couleur du texte des éléments du menu -->
        <item name="android:textColor">@color/white</item>

        <!-- Couleur des icônes des éléments du menu -->
        <item name="android:textColorSecondary">@color/white</item>
    </style>


    <!-- LISTVIEW -->
    <!-- Style pour le nom du lieu -->
    <style name="TextViewPlaceName">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/listview_text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style pour la distance du lieu -->
    <style name="TextViewPlaceDistance">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/listview_text_size_medium</item>
    </style>

    <!-- Style pour l'adresse du lieu -->
    <style name="TextViewPlaceAddress">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/listview_text_size_small</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Style pour le nombre de travailleurs -->
    <style name="TextViewWorkmateNumber">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/listview_text_size_small</item>
    </style>

    <!-- Style pour les parenthèses autour du nombre de travailleurs -->
    <style name="TextViewWorkmateParentheses">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/listview_text_size_small</item>
    </style>

    <!-- Style pour l'heure d'ouverture -->
    <style name="TextViewPlaceOpen">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/listview_text_size_small</item>
        <item name="android:textStyle">italic</item>
    </style>



</resources>