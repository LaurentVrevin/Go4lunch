<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Go4lunch" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@android:color/holo_red_dark</item>
        <item name="colorAccent">@color/black</item>

        <!-- Text Color -->
        <item name="android:textColorPrimary">@color/orange</item>
        <item name="android:textColorSecondary">@color/black</item>

    </style>
    <!-- Base application theme. -->


    <style name="Theme.Go4lunch.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Go4lunch.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Go4lunch.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>