<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lunchblurgraydark"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >
    <TextView
        android:id="@+id/tv_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_header_title"
        android:paddingBottom="@dimen/header_title_margin"
        android:textSize="@dimen/textsize_header_title"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        />


    <ImageView
        android:id="@+id/iv_header_Avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/nav_header_desc"

        android:paddingStart="0dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        app:layout_constraintTop_toBottomOf="@+id/tv_header_title"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tv_header_profilename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
        android:layout_marginTop="20dp"
        android:text="@string/nav_header_profilename"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_header_profilename"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/iv_header_Avatar"
        app:layout_constraintTop_toBottomOf="@id/tv_header_title" />

    <TextView
        android:id="@+id/tv_header_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nav_header_vertical_spacing"

        android:text="@string/nav_header_subtitle"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_header_email"
        app:layout_constraintLeft_toRightOf="@id/iv_header_Avatar"
        app:layout_constraintTop_toBottomOf="@id/tv_header_profilename" />

</androidx.constraintlayout.widget.ConstraintLayout>